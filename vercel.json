{
  "version": 2,
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "client/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "server/server.js": {
      "runtime": "@vercel/node@22"
    }
  }
}
